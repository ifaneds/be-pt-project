{
  "name": "be-pt-project",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "build:client": "esbuild src/client/index.ts src/client/about.ts src/client/contact.ts --bundle --format=iife --outdir=public/scripts --target=es2020",
    "watch:client": "esbuild src/client/index.ts src/client/about.ts src/client/contact.ts --bundle --format=iife --outdir=public/scripts --target=es2020 --watch",
    "watch": "tsc --watch",
    "dev": "concurrently \"tsx watch src/index.ts\" \"npm run watch:client\" \"browser-sync start --config bs-config.js\"",
    "start": "tsx src/index.ts"
  },
